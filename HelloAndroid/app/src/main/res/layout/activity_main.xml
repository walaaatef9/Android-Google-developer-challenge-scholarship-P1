<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lolo.helloandroid.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="6"
        android:layout_marginTop="@dimen/scale"
        android:layout_marginBottom="@dimen/scale"
        android:scaleType="centerCrop"
        android:src="@drawable/download"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_weight="@dimen/one"
        android:layout_marginLeft="@dimen/scale"
        android:layout_marginBottom="@dimen/scale"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/udacity"
        android:drawablePadding="@dimen/nine"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/text1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_marginLeft="@dimen/scale"
        android:layout_marginBottom="@dimen/scale"
        android:layout_weight="@dimen/one"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="@dimen/nine"
        android:singleLine="true"
        android:gravity="center"
        android:autoLink="phone"
        android:text="@string/text2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_marginLeft="@dimen/scale"
        android:layout_marginBottom="@dimen/scale"
        android:layout_weight="@dimen/one"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/web"
        android:drawablePadding="@dimen/nine"
        android:gravity="center"
        android:autoLink="web"
        android:text="@string/text3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zero"
        android:layout_weight="@dimen/one"
        android:layout_marginLeft="@dimen/scale"
        android:layout_marginBottom="@dimen/scale"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="@dimen/nine"
        android:singleLine="true"
        android:gravity="center"
        android:autoLink="map"
        android:text="@string/text4"
        />
</LinearLayout>